<Window x:Class="Nauron.DataEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nauron"
        mc:Ignorable="d"
        Title="DataEditor" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Nazwa pliku:" />
            <TextBox x:Name="FileNameBox" Width="150" Text="data1.txt" />
            <Button Content="Zapisz dane" Margin="10,0,0,0" Click="ZapiszDane"/>
        </StackPanel>
        <Canvas Name="PlotCanvas" Background="GhostWhite" Grid.Row="2" Margin="10"/>
    </Grid>
</Window>
